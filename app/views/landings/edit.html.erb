<div class="container" style="padding-top: 30px;">
  <div class="comment-form">
    <div class="page-title text-center">
     <div class="row">
      <div class="col-md-12 center-container">
        <h3 class="welcome-user">Edit your flight information</h3><br>
        <%= form_for([@user,@landing], :html => {:class => "form-horizontal"}) do |f| %>
          <div class="form-group">
            <%= f.label :airport_id, "Airport", :class => "col-sm-5 control-label page-text" %>
            <div class="col-sm-3">
              <%= f.collection_select :airport_id, Airport.all, :id, :name, {:prompt => "Select your airport"}, :class => "page-text" %><br>
            </div>
          </div>
    
         <div class="form-group">
           <%= f.label :airline, "Airline", :class => "col-sm-5 control-label page-text" %>
           <div class="col-sm-3">
             <%= f.text_field :airline, :class => "form-control page-text" %><br>
           </div>
         </div>

        <div class="form-group">
          <%= f.label :flight_num, "Flight Number", :class => "col-sm-5 control-label page-text" %>
          <div class="col-sm-3">
            <%= f.text_field :flight_num, :class => "form-control page-text" %><br>
         </div>
       </div>

        <div class="form-group">
          <%= f.label :arrival_date, "Arrival Date", :class => "col-sm-5 control-label page-text" %>
          <div class="col-sm-3">
            <%= f.date_field :arrival_date, :class => "form-control page-text" %><br>
         </div>
       </div>

        <div class="form-group">
          <%= f.label :arrival_time, "Arrival Time", :class => "col-sm-5 control-label page-text" %>
          <div class="col-sm-3">
            <%= f.time_field :arrival_time, :class => "form-control page-text" %><br>
         </div>
      </div>

        <div class="form-group">
          <%= f.label :destination_id, "Destination", :class => "col-sm-5 control-label page-text" %>
          <div class="col-sm-3">
            <%= f.collection_select :destination_id, @user.destinations, :id, :name, {:prompt => "Select your destination"}, :class => "page-text" %><br><br>
            <%= link_to "Make a new destination", user_path(@user), :class => "page-text" %><br><br>
            <%= f.submit "Edit flight", :class => "btn btn-primary page-text" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>