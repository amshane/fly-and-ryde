<h2 class="other-headers">Your Upcoming Trips</h2>
<ul>
  <% @user.available_landings.each do |l| %>
    <% if l.cancelled == true %>
      <h5 class="page-text">Your confirmed reservation was cancelled, sorry. Please find a new match.</h5>
    <% end %>
    <li class="page-text">Your trip details:
      <%= l.airport.abbreviation %> -
      <%= l.arrival_date.strftime("%b %d, %Y") %> -
      <%= l.arrival_time.strftime("%I:%M %p") %>
    </li>
    <ul>
      <li>
        <%= link_to "Edit your flight information", edit_user_landing_path(@user,l), :class => "page-text" %> - <%= link_to "Remove this flight", user_landing_path(@user, l), method: :delete, data: {:confirm => "Are you sure you want to delete this landing?"}, :class => "page-text" %>
      </li>
      <li>
        <%= link_to "Find Buddy", user_landing_path(@user,l), :class => "page-text" %>
      </li>
    </ul>
  <% end %>
</ul>
