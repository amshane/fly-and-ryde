<br>
<h4 class="other-headers">Your Upcoming Trips<span class="tblue">.</span></h4>
  <ul>
    <% @user.available_landings.each do |l| %>
      <% if l.cancelled == true %>
        <h5>Your confirmed reservation was cancelled, sorry. Please find a new match.</h5>
      <% end %>
      <li class="ride-user-font"><strong>Your trip details:</strong>
        <%= l.airport.abbreviation %> -
        <%= l.arrival_date.strftime("%b %d, %Y") %> -
        <%= l.arrival_time.strftime("%I:%M %p") %>
      </li>
      <h5 class="page-text" style="padding-top: 3px;">
        <%= link_to "Edit your flight information", edit_user_landing_path(@user,l) %> - <%= link_to "Remove this flight", user_landing_path(@user, l), method: :delete, data: {:confirm => "Are you sure you want to delete this landing?"} %>
      </h5>
      <h5 class="page-text">
        <%= link_to "Find Buddy", user_landing_path(@user,l) %>
      </h5>
  <% end %>
</ul>
