<br>
<h4 class="other-headers">Confirmed Ride<span class="tblue">-</span>Shares<span class="tblue">.</span></h4>
<ul>
  <% @user.confirmed_landings.each do |confirmed_landing| %>
    <li class="ride-user-font"><strong>Your trip details:</strong>
        <%= confirmed_landing.airport.abbreviation %> -
        <%= confirmed_landing.arrival_date.strftime("%b %d, %Y") %> -
        <%= confirmed_landing.arrival_time.strftime("%I:%M %p") %>
    </li>

    <h5 class="page-text" style="padding-top: 3px;"><%= link_to "View ride confirmation page", ride_path(confirmed_landing.ride) %></h5>
    <h5 class="page-text"><%= link_to "Cancel rideshare", user_landing_path(@user, confirmed_landing), method: :delete, data: {:confirm => "Are you sure you want to cancel this rideshare?"} %></h5>
  <% end %>
</ul>
