<h3>Confirmed Ride-Shares!</h3>
<ul>
  <% @user.confirmed_landings.each do |confirmed_landing| %>
    <li>Your trip details:
      <%= confirmed_landing.airport.abbreviation %> -
      <%= confirmed_landing.arrival_date.strftime("%b %d, %Y") %> -
      <%= confirmed_landing.arrival_time.strftime("%I:%M %p") %>
    </li>
    <ul>
      <li>
        <%= link_to "View ride confirmation page", ride_path(confirmed_landing.ride) %>
      </li>
      <li>
        <%= link_to "Cancel rideshare", user_landing_path(@user, confirmed_landing), method: :delete, data: {:confirm => "Are you sure you want to cancel this rideshare?"} %>
      </li>
    </ul>
  <% end %>
</ul>
