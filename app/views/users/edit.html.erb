<div class="container" style="padding-top: 30px; padding-left: 60px;">
  <div class="comment-form">
    <div class="page-title text-center">
      <h3 class="welcome-user"><strong>Your Profile</strong></h3><br>
      <%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
        <div class="form-group">
          <%= f.label :first_name, :class => "col-sm-5 control-label ride-user-font" %>
          <div class="col-sm-3">
            <%= f.text_field :first_name, :class => "form-control ride-user-font"%><br>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name, :class => "col-sm-5 control-label page-text" %>
          <div class="col-sm-3">
            <%= f.text_field :last_name, :class => "form-control ride-user-font" %><br>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "Phone number, only digits please!", :class => "col-sm-5 control-label ride-user-font" %>
          <div class="col-sm-3">
            <%= f.text_field :phone_number, {:class => "form-control ride-user-font", :placeholder => "5555555555"} %><br>
          </div>
        </div>

        <h3><%= f.submit "Submit", :class => "btn btn-primary page-text" %></h3>
      <% end %>
    </div>
  </div>
</div>
