<div class="row">
  <div class="col-md-6">
    <h1>Welcome <%= @user.first_name %>!</h1>
    <h4>Your phone number: <%= number_to_phone(@user.phone_number)%></h4>
  </div>
  <div class="col-md-6">
    <h3>Leaving on a trip?</h3>
    <%= link_to "Find a carpool buddy", new_user_landing_path(@user), :class=> "btn btn-primary" %>
  </div>
</div>

<% if @user.pending_landings.size > 0 %>
  <%= render "pending" %>
<% end %>

<% if @user.confirmed_landings.size > 0 %>
  <%= render "confirmed" %>
<% end %>

<% if @user.available_landings.size > 0 %>
  <%= render "available" %>
<% end %>

<% if @user.requested_landings.size > 0 %>
  <%= render "requested" %>
<% end %>

<div class="row">

  <div class="col-md-6">
    <h3>Destinations</h3>
    <ul>
      <% @user.destinations.each do |destination| %>
        <li><%= destination.name %>: <%= destination.address %></li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-6">
    <h3>Make a New Destination</h3>
    <%= form_for @destination, :html => {:role=>"form"} do |f| %>
      <%= f.hidden_field :user_id, :value => @user.id %><br>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>
      
      <%= f.submit "Make destination", {:class=> "btn btn-primary"} %>
    <% end %>
  </div>

</div>