<div class="container" style="padding-top: 30px;">
  <div class="row">
    <div class="page-title">
    <div class="col-md-6">
      <h3 class="welcome-user"><strong>Welcome <%= @user.first_name %>!</strong></h3>
      <h2 style="text-transform: uppercase; font-family: 'Open sans'; font-size: 20px; font-weight: bold;">Your phone number: <%= number_to_phone(@user.phone_number)%></h2>
      <h2 style="text-transform: uppercase; font-family: 'Open sans'; font-size: 15px; font-weight: bold;"><%= link_to "Edit Your Profile", edit_user_path(@user) %> </h2>
    </div>
    </div>
    <div class="col-md-6" style="padding-top: 30px;">
      <h4 class="other-headers">Leaving on a trip?</h4>
      <h3><%= link_to "Find a carpool buddy", new_user_landing_path(@user), :class=> "btn btn-primary", :style => "text-transform: uppercase; font-family: 'Open sans'; font-size: 15px; font-weight: bold;" %></h3>
    </div>
  </div>


  <% if @user.pending_landings.size > 0 %>
    <%= render "pending" %>
  <% end %>

  <% if @user.confirmed_landings.size > 0 %>
    <%= render "confirmed" %>
  <% end %>

  <% if @user.available_landings.size > 0 %>
    <%= render "available" %>
  <% end %>

  <% if @user.requested_landings.size > 0 %>
    <%= render "requested" %>
  <% end %>

  <div class="row">

    <div class="col-md-6">
      <h3 class="other-headers">Destinations</h3>
      <ul>
        <% @user.destinations.each do |destination| %>
          <li style="text-transform: uppercase; font-family: 'Open sans'; font-size: 15px; font-weight: bold;"><%= destination.name.capitalize %>: <%= destination.address %></li>
          <h3 style="text-transform: uppercase; font-family: 'Open sans'; font-size: 15px; font-weight: bold;">Neighborhood: <%= destination.neighborhood %></h3>
          <h3 style="text-transform: uppercase; font-family: 'Open sans'; font-size: 15px; font-weight: bold;">Borough: <%= destination.borough %></h3>
          <h3 style="text-transform: uppercase; font-family: 'Open sans'; font-size: 15px; font-weight: bold;"><%= link_to "Edit", edit_destination_path(destination) %>  -    
          <%= link_to "Delete", destination_path(destination), method: :delete, data: {:confirm => "Are you sure you want to delete this destination?"} %></h3>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      

      <h4 class="other-headers">Make a New Destination</h4>
      <%= form_for @destination do |f| %>
        <%= f.hidden_field :user_id, :value => @user.id %><br>

        <!-- <div class="form-group"> -->
          <%= f.label :name %>
          <!-- <div class="col-sm-2"> -->
            <%= f.text_field :name %>
          <!-- </div> -->
        <!-- </div> -->

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address %>
        </div>
        <h3><%= f.submit "MAKE DESTINATION", {:class=> "btn btn-primary", :style => "text-transform: uppercase; font-family: 'Open sans'; font-size: 15px; font-weight: bold;"} %></h3>
      <% end %>
    </div>

  </div>
</div>