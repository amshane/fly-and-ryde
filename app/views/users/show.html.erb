  <div class="hero inner-page">
    <div class="container">
      <div class="intro">
        <h2 style=>YOUR RIDE-SHARE BOARD<span class="tblue">.</span></h2>
      </div>
    </div>
  </div>
</div>
<div class="container" style="padding-top: 30px;">
  <div class="row">
    <div class="page-title">
    <div class="col-md-6">
      
      <h3 class="welcome-user"><strong>Welcome <%= @user.first_name %>!</strong></h3>
      <h5 class="page-text">Your phone number: <%= number_to_phone(@user.phone_number)%></h5>
      <h5 class="page-text"><%= link_to "Edit Your Profile", edit_user_path(@user) %> </h5>
    </div>
    </div>
    <div class="col-md-6" style="padding-top: 30px;">
      <h2 class="other-headers">Leaving on a trip?</h2>
      <h3><%= link_to "Find a carpool buddy", new_user_landing_path(@user), :class=> "btn btn-primary page-text" %></h3>
    </div>
  </div>


  <% if @user.pending_landings.size > 0 %>
    <%= render "pending" %>
  <% end %>

  <% if @user.confirmed_landings.size > 0 %>
    <%= render "confirmed" %>
  <% end %>

  <% if @user.available_landings.size > 0 %>
    <%= render "available" %>
  <% end %>

  <% if @user.requested_landings.size > 0 %>
    <%= render "requested" %>
  <% end %>

  <div class="row">

    <div class="col-md-6">
      <h2 class="other-headers">Destinations</h2>
      <ul>
        <% @user.destinations.each do |destination| %>
          <li class="page-text"><%= destination.name.capitalize %>: <%= destination.address %></li>
          <h5 class="page-text">Neighborhood: <%= destination.neighborhood %></h5>
          <h5 class="page-text">Borough: <%= destination.borough %></h5>
          <h5 class="page-text"><%= link_to "Edit", edit_destination_path(destination) %>  -    
          <%= link_to "Delete", destination_path(destination), method: :delete, data: {:confirm => "Are you sure you want to delete this destination?"} %></h5>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      

      <h2 class="other-headers">Make a New Destination</h2>
      <%= form_for @destination, :html => {:class => "form-horizontal"} do |f| %>
        <%= f.hidden_field :user_id, :value => @user.id %><br>

        <div class="form-group">
          <%= f.label :name, :class => "page-text col-sm-2" %>
          <div class="col-sm-4">
            <%= f.text_field :name, :class => "page-text" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :address, :class => "page-text col-sm-2" %>
          <div class="col-sm-4">
          <%= f.text_field :address, :class => "page-text" %>
        </div>
      </div>
        <h3><%= f.submit "MAKE DESTINATION", {:class=> "btn btn-primary page-text"} %></h3>
      <% end %>
    </div>
  </div>
</div>
